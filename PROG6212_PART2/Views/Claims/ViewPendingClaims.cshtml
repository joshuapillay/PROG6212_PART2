<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pending Claims for Approval</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        h2 {
            text-align: center;
            margin-top: 20px;
            font-size: 2.5rem;
            color: white;
            text-shadow: 1px 1px 2px #000; /* Added for better visibility */
        }

        table {
            width: 90%;
            margin: 30px auto;
            border-collapse: separate;
            border-spacing: 0;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        thead {
            background-color: #007bff;
            color: white;
        }

        th, td {
            padding: 15px;
            text-align: left;
        }

        th {
            text-transform: uppercase;
            font-weight: bold;
            border-bottom: 3px solid #f1f1f1;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tbody tr {
            transition: background-color 0.3s ease;
        }

            tbody tr:hover {
                background-color: #e9ecef;
            }

        a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

            a:hover {
                text-decoration: underline;
            }

        .actions {
            display: flex;
            gap: 10px;
        }

        button {
            padding: 10px 20px;
            border: none;
            border-radius: 50px;
            font-size: 14px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .no-claims {
            text-align: center;
            font-size: 1.2rem;
            margin-top: 50px;
            color: #6c757d;
        }

        .status-pending {
            color: orange;
        }

        .status-approved {
            color: green;
        }

        .status-rejected {
            color: red;
        }

        .rejection-reason {
            font-size: 0.9rem;
            color: #c82333;
            margin-top: 5px;
        }

        @@media (max-width: 768px) {
            table {
                width: 100%;
            }

            th, td {
                padding: 10px;
            }

            h2 {
                font-size: 2rem;
            }

            button {
                padding: 8px 15px;
                font-size: 12px;
            }
        }
    </style>
</head>
<body>
    <h2>Pending Claims for Approval</h2>

    @if (Model != null && Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Lecturer Name</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Notes</th>
                    <th>Document</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.Notes</td>
                        <td>
                            <a href="@claim.DocumentPath" target="_blank">View Document</a>
                        </td>
                        <td>
                            @if (claim.Status == "Pending")
                            {
                                <span class="status-pending">@claim.Status</span>
                            }
                            else if (claim.Status == "Approved")
                            {
                                <span class="status-approved">@claim.Status</span>
                            }
                            else if (claim.Status == "Rejected")
                            {
                                <span class="status-rejected">@claim.Status</span>
                                <div class="rejection-reason">
                                    <strong>Reason:</strong> @claim.RejectionReason
                                </div>
                            }
                        </td>
                        <td>
                            @if (claim.Status == "Pending")
                            {
                                <div class="actions">
                                    <form method="post" action="/Claims/ApproveClaim" style="display:inline-block;">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-success">Approve</button>
                                    </form>

                                    <form method="post" action="/Claims/RejectClaim" style="display:inline-block;">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-danger">Reject</button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <span>--</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="no-claims">No pending claims to display.</p>
    }
</body>
</html>
